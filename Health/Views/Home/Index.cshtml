@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
        }

        .entirecontainer {
            display: flex;
            justify-content: center;
            height: 100vh; /* Full viewport height */
        }

        .imageside {
            width: 50%; /* Half of the container */
            height: 100%; /* Take full height */
        }

        .formside {
            background-image: url('images/pic.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            width: 100%;
            display: flex;
            align-items: center; /* Center the form vertically */
            justify-content: center; /* Center the form horizontally */
        }

        .logo {
            width: 25%;
            height: 15%;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .formpadding {
            width: 30%;
            height: 70%;
            padding: 20px; /* Adjusted padding */
            background-color: white; /* Add a background color for the shadow to be visible */
            border-radius: 10px; /* Optional: Rounded corners */
            /* Shadow for elevation */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .heading {
            text-align: center;
            color: teal;
            padding-bottom: 10px;
        }

        form {
            width: 100%;
        }

        .tabs {
            display: flex;
            justify-content: space-between;
        }

        .Patient, .Staff {
            color: black;
            padding: 2%;
            width: 45%;
            text-align: center;
            border-radius: 5px;
            border: 1px solid teal; /* Set border width and style */
            transition: background-color 0.3s ease; /* Smooth transition */
        }

            .Patient:hover, .Staff:hover {
                background-color: teal; /* Change to teal on hover */
                color: white; /* Change text color to white for better visibility */
            }

        /* Add an active class for the clicked tab */
        .active {
            background-color: teal; /* Change to teal when active */
            color: white; /* Change text color to white for better visibility */
        }

        button.btn {
            background-color: teal;
            width: 100%;
            margin: 20px 0;
            color: white;
        }

    </style>
</head>
<body>
    <div class="entirecontainer">
        <div class="formside">
            <div class="formpadding">
                <img class="logo" src="images/logo.png" />
                <h2 class="heading">Health Aid</h2>
                <form method="post" action="/Auth/Login">
                    <!-- Update the action to the Auth controller's Login action -->
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="Username" required>
                    </div>
                    <div class="mb-3">
                        <label for="id" class="form-label">Password</label>
                        <input type="text" class="form-control" id="id" name="Id" required>
                    </div>
                    <div class="tabs">
                        <div class="Patient" onclick="selectUserType('Patient')">Patient</div>
                        <div class="Staff" onclick="selectUserType('Staff')">Staff</div>
                    </div>
                    <input type="hidden" id="selectedUserTypeInput" name="UserType"> <!-- Update the name to match the UserCredentials model -->
                    <button type="submit" class="btn">Submit</button>
                </form>

            </div>
        </div>
    </div>

    <script>
        function selectUserType(userType) {
            // Update the hidden input field with the selected user type
            document.getElementById("selectedUserTypeInput").value = userType;
            console.log("'Jochebed has a big head")

            // Remove 'active' class from both tabs
            document.querySelectorAll('.tabs div').forEach(function (tab) {
                tab.classList.remove('active');
            });

            // Add 'active' class to the selected tab
            document.querySelector(`.${userType}`).classList.add('active');
        }
    </script>
</body>
</html>
