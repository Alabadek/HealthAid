@{
    ViewData["Title"] = "Customer Page";
} 


@model List<Patient>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Information System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #F8F9FA;
        }

        .table-header {
            background-color: #007BFF; 
            color: white;
            
        }

        .btn-edit {
            color: #007BFF;
            border: none;
            background: none;
            cursor: pointer;
        }

        .btn-delete {
            color: #DC3545;
            border: none;
            background: none;
            cursor: pointer;
        }
    </style>
</head>
<body>




    <div class="container mt-5">
        <h2 class="mb-4" style="color: #242525;">Patient List</h2> <!-- Changed heading color to blue -->
        <div class="text-end mb-2">
            <a class="btn btn-outline-primary" asp-controller="Customer" asp-action="Add">
                Add Customer
            </a>
        </div>
        <table class="table table-striped">
            <thead class="table-header">
                <tr>
                    <th>No</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Contact</th>
                    <th>Emergency Contact</th>
                    <th>Marital Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Patient patient in Model)
                {
                    <tr>
                        <td>@patient.Id</td>
                        <td>@patient.FirstName</td>
                        <td>@patient.LastName</td>
                        <td>@patient.DateOfBirth</td>
                        <td>@patient.Gender</td>
                        <td>@patient.Contact</td>
                        <td>@patient.EmergencyContact</td>
                        <td>@patient.MaritalStatus</td>
                        <td>
                            <button class="btn btn-edit"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-delete"><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
