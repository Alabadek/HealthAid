@model Health.Models.Staff

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Staff</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        #headingside {
            text-align: center;
            margin: auto;
        }

        .section-header {
            background-color: teal;
            color: white;
            padding: 1rem;
            border-radius: 5px;
        }

        .btn-teal {
            background-color: teal;
            color: white;
            border: none;
        }

            .btn-teal:hover {
                background-color: #006666;
            }

        .card-header h5 {
            margin: 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card {
            border: none;
            margin-bottom: 1.5rem;
        }

        button.btn-light {
            background: white;
            color: teal;
            border: none;
        }

            button.btn-light:hover {
                background-color: #006666;
                color: white;
            }

        .text-end button {
            margin-left: 10px;
        }

        .btn-primary {
            background-color: teal;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header section-header" id="general-info">
                <h5 class="mb-0 d-flex justify-content-between align-items-center">
                    <span id="headingside">Update Staff</span>
                </h5>
            </div>
            <div id="collapseGeneralInfo" class="collapse show">
                <div class="card-body">
                    <form method="post" asp-controller="Staff" asp-action="Edit">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="firstName" class="form-label" asp-for="FirstName">First Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        <input type="text" class="form-control" id="firstName" asp-for="FirstName" placeholder="Enter First Name" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="lastName" class="form-label" asp-for="LastName">Last Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        <input type="text" class="form-control" id="lastName" asp-for="LastName" placeholder="Enter Last Name" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="contact" class="form-label" asp-for="Contact">Contact</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                        <input type="text" class="form-control" id="contact" asp-for="Contact" placeholder="Enter Contact Number" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-end mt-3">
                            <button class="btn btn-teal btn-outline d-block w-100" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
</body>
</html>
