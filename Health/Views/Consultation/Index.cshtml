@model List<Consultation>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Information System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #F8F9FA;
        }

        .table-header {
            background-color: teal; /* Change the header color to blue */
            color: white;
        }

        .btn-outline {
            border: 2px solid teal;
        }

        h1 {
            color: teal;
            font-weight: 600;
            text-align: center;
        }

        .btn-outline:hover {
            background-color: teal;
            color: white;
        }

        .btn-edit {
            color: #007BFF;
            border: none;
            background: none;
            cursor: pointer;
            .btn-
        }

        .btn-delete {
            color: #DC3545;
            border: none;
            background: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Consultation List</h1>
    <div class="container mt-5">
        <div class="text-end mb-2">
            <div class="text-end mb-2">
                <a class="btn btn-outline" asp-controller="Consultation" asp-action="Add">
                    Add Consultation
                </a>
            </div>
        </div>
        <table class="table table-striped">
            <thead class="table-header">
                <tr>
                    <th>Consultation Id</th>
                    <th>Patient Id</th>
                    <th>Diagnosis</th>
                    <th>Consultation Date</th>
                    <th>Remarks</th>
                    <th>Staff Id</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Consultation consultation in Model)
                {
                    <tr>
                        <td>@consultation.Id</td>
                        <td>@consultation.PatientId</td>
                        <td>@consultation.Diagnosis</td>
                        <td>@consultation.Date</td>
                        <td>@consultation.Remarks</td>
                        <td>@consultation.StaffId</td>
                      
                        <td>
                            <a class="btn btn-edit" asp-controller="Consultation" asp-action="Edit" asp-route-id="@consultation.Id">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>